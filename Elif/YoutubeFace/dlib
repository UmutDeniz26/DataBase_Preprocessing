import urllib.request
import zipfile
import dlib

# Dlib yüz dedektörünü yükleyin
face_detector = dlib.get_frontal_face_detector()

# Eğitilmiş modeli indirin ve yükleyin
dlib_model_url = "http://dlib.net/files/shape_predictor_68_face_landmarks.dat.bz2"
dlib_model_path = "shape_predictor_68_face_landmarks.dat"

print("Eğitilmiş model indiriliyor...")
urllib.request.urlretrieve(dlib_model_url, dlib_model_path + ".bz2")

# Sıkıştırılmış dosyayı çıkar
with zipfile.ZipFile(dlib_model_path + ".bz2", 'r') as zip_ref:
    zip_ref.extractall()

print("Eğitilmiş model başarıyla indirildi.")

# Modeli açın ve yükle
landmark_predictor = dlib.shape_predictor(dlib_model_path)

# Artık modeli kullanabilirsiniz

# İndirilen dosyaları silebilirsiniz
import os
os.remove(dlib_model_path + ".bz2")
